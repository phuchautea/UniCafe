@model UniCafe.Models.OptionProduct

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>
@Html.Partial("ErrorsAlert")
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Option Product</h4>
    <hr />
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        <label class="control-label col-md-2">Tên</label>
        <div class="col-md-10">
            <input class="form-control" id="name" name="name" type="text" value="@Html.DisplayFor(item => item.Name)" @*onchange="getSlug()"*@>
        </div>
    </div>

    @*<div class="form-group">
        <label class="control-label col-md-2">Slug</label>
        <div class="col-md-10">
            <input class="form-control" id="slug" name="slug" type="text" value="@Html.DisplayFor(item => item.Slug)">
        </div>
    </div>*@

    <div class="form-group">
        <label class="control-label col-md-2">Giá</label>
        <div class="col-md-10">
            
            <input class="form-control" id="price" name="price" type="text" value="@Model.Price.ToString("N0")đ">
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Sản Phẩm</label>
        <div class="col-md-10">
            <select class="form-control" name="product_id">
                <option value="@Html.DisplayFor(model => model.Product.Id)">Giữ nguyên: @Html.DisplayFor(model => model.Product.Name)</option>
                @foreach (var product in ViewBag.Product)
                {
                    <option value="@product.Id">@product.Name</option>
                }
            </select>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Trạng thái</label>
        <div class="col-md-10">
            @if (Convert.ToInt32(Model.Status) == 1)
            {
                <input type="checkbox" class="form-check-input" name="status" id="status" value="1" checked>
            }
            else
            {
                <input type="checkbox" class="form-check-input" name="status" id="status" value="1">
            }
            <label class="form-check-label">ON</label>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
<script type="text/javascript">
    function removeDiacritics(str) {
        str = str.replace(/Đ/g, "D");
        str = str.replace(/ /g, "-"); // replace space to "-"
        return str.normalize("NFD").replace(/[\u0300-\u036f]/g, "");
    }
    function getSlug() {
        var name = $('#name').val();
        var result = removeDiacritics(name);
        $('#slug').val(result.toLowerCase());
    }
</script>