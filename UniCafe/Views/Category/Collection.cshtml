<div id="collection">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12 stikySidebar">
                <div class="list-group-item">
                    <a class="nav-link active" href="/Collection/All" style="text-decoration:none">Tất cả</a>
                </div>
                @foreach(var Category in ViewBag.Categories){
                    
                <div class="list-group-item ">
                    <a class="nav-link active" href="/Collection/@Category.Slug" style="text-decoration:none">@Category.Name</a>
                </div> 
                }
                <!--<div class="list-group-item">
                    <a class="nav-link active" href="/@TempData["Slug"]" style="text-decoration:none">Trà trái cây</a>
                </div>
