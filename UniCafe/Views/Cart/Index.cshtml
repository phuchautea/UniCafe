@model List<UniCafe.Models.CartItem>
@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/_Layout_User.cshtml";
}

<script>
    $(function () {
                $('.btn-remove').on('click', function () {
                    var cartItemId = $(this).data('item-cart-id');
                    $.ajax({
                        url: '@Url.Action("RemoveFromCart", "Cart")',
                        type: 'POST',
                        data: { cartItemId: cartItemId },
                        success: function (result) {
                            if (result.success) {
                                location.reload();
                            }
                        }
                    });
                });

                $('.btn-clear').on('click', function () {
                    $.ajax({
                        url: '@Url.Action("ClearCart", "Cart")',
                        type: 'POST',
                        success: function (result) {
                            if (result.success) {
                                location.reload();
                            }
                        }
                    });
                });
            });
</script> 
<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Size</th>
            <th>Topping</th>
            <th>Subtotal</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.Price.ToString("N0")đ</td>
                <td>@item.Quantity</td>
                <td>@item.PropertyProduct.Name - @item.PropertyProduct.Price</td>
                <td>
                    @{
                        List<int> optionIds = new List<int>();
                    }
                    @foreach (var option in item.Options)
                    {
                        optionIds.Add(option.Id);
                        <span><b>@option.Name</b> : <b>@option.Price</b></span><br />
                    }
                </td>
                <td>@(((item.Price + item.PropertyProduct.Price + item.Options.Sum(option => option.Price)) * item.Quantity).ToString("N0"))đ</td>
                <td><button class="btn-remove" data-item-cart-id="@item.Id">Remove</button></td>
            </tr>
        }
        <tr>
            <td colspan="5">Total:</td>
            <td colspan="4">@Model.Sum(item => (item.Price + item.PropertyProduct.Price + item.Options.Sum(option => option.Price)) * item.Quantity).ToString("N0")đ</td>
        </tr>
    </tbody>
</table>

