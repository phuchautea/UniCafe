@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title | Admin Dashboard</title>

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <link rel="stylesheet" href="/Content/Layout/Admin/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="/Content/Layout/Admin/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <link rel="stylesheet" href="/Content/Layout/Admin/dist/css/adminlte.min.css">
    <script src="/Content/Layout/Admin/plugins/jquery/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-price-format/2.2.0/jquery.priceformat.min.js"></script>

</head>

<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">

        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button">
                        <i class="fas fa-bars"></i>
                    </a>
                </li>
            </ul>
        </nav>

        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <a href="/" class="brand-link text-center">
                <span class="brand-text font-weight-light">UniCafe</span>
            </a>
            <div class="sidebar">
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="/Content/Layout/Admin/images/avatar.png" class="img-circle
                    elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a href="#" class="d-block">
                            @User.Identity.GetUserName()
                        </a>
                        <span class="badge bg-danger">
                            Admin
                        </span>
                    </div>
                </div>
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item">
                            <a href="/Admin/Stats" class="nav-link">
                                <i class="nav-icon fas fa-chart-line"></i>
                                <p>Thống kê</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Admin/ManageUser" class="nav-link">
                                <i class="nav-icon fas fa-users"></i>
                                <p>Người dùng</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-notes-medical"></i>
                                <p>
                                    Quyền hạn
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="/Admin/ManageRole" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Danh sách Role</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/Admin/ManageRole/SetRole" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Set Role</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a href="/Admin/ManageCategory" class="nav-link">
                                <i class="nav-icon fas fa-list-alt"></i>
                                <p>Danh mục</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fab fa-product-hunt"></i>
                                <p>
                                    Sản phẩm
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="/Admin/ManageProduct" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Danh sách sản phẩm</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/Admin/ManagePropertyProduct" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Thuộc tính sản phẩm</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/Admin/ManageOptionProduct" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Tùy chọn sản phẩm</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a href="/Admin/ManageOrder" class="nav-link">
                                <i class="nav-icon fas fa-sticky-note"></i>
                                <p>Đơn hàng</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Admin/ManageBlog" class="nav-link">
                                <i class="nav-icon fas fa-file-alt"></i>
                                <p>Blog</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Account/Logout" class="nav-link">
                                <i class="nav-icon fas fa-sign-out-alt"></i>
                                <p>Đăng xuất</p>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        <div class="content-wrapper">
            <section class="content" style="margin-top: 15px;">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </section>
        </div>

        <footer class="main-footer">
            <strong>Copyright &copy; 2023 by <a href="#">UniCafe</a>.</strong> All rights reserved.
        </footer>
        <script src="/Content/Layout/Admin/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="/Content/Layout/Admin/dist/js/adminlte.min.js"></script>
        <script src="/Content/Layout/Admin/js/ajax.js"></script>

    </div>
</body>
</html>
