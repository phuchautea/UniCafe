@using UniCafe.Models
@model IEnumerable<AspNetUserRoles>
@{
    ViewBag.Title = "SetRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>SetRole</h2>
<div class="row">
    <h4>AspNetUserRoles</h4>
    <table class="table table-hover table-responsive table-striped table-bordered">
        <tr>
            <th>
                User
            </th>
            <th>
                Role
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoleId)
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { UserId = item.UserId, RoleId = item.RoleId })
                </td>
            </tr>
        }

    </table>
    @using (Html.BeginForm("SetRole", "Role", FormMethod.Post))
    {
        @Html.Partial("ErrorsAlert")
        //<form method="POST" asp-action="Create" asp-controller="Category">
        <div class="form-group">
            <label>User</label>
            <select class="form-control" name="UserId">
                @foreach (var user in ViewBag.Users)
                {
                    <option value="@user.Id">@user.UserName</option>
                }
            </select>
            @*<input type="text" class="form-control" name="UserName">*@
        </div>
        <div class="form-group">
            <label>Role</label>
            <select class="form-control" name="RoleId">
                @foreach (var role in ViewBag.Roles)
                {
                    <option value="@role.Id">@role.Name</option>
                }
            </select>
            @*<input type="text" class="form-control" name="Role">*@
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        //</form>
    }
</div>
